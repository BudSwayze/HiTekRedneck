.slider
	position relative
	width 100%
	height 340px
	margin 10px auto 0
	background-color #0e0e16
	overflow hidden
	border-radius 10px 10px 0 0
	box-shadow 0 0 0 10px rgba(0,0,0, 0.3)
	clearfix()

	&__radio
		display none

	&__control
		position absolute
		right 10px
		top 45%
		z-index 100
		width 13px
		height 13px
		background-color rgba(255,255,255,.8)
		cursor pointer
		border-radius 50%
		box-shadow inset 1px 1px 2px 0 rgba(0,0,0,.8)
		transition background-color .5s

		&[for=button-one]
			margin-top -25px

		&[for=button-three]
			margin-top 25px

	#button-one:checked~label[for=button-one]
		background-color rgba(100,100,100,1)

	#button-two:checked~label[for=button-two]
		background-color rgba(100,100,100,1)

	#button-three:checked~label[for=button-three]
		background-color rgba(100,100,100,1)

	#button-one:checked~.slider__items
		margin-top 0

	#button-two:checked~.slider__items
		margin-top -340px

	#button-three:checked~.slider__items
		margin-top -680px

	&__items
		width 100%
		transition all, .5s

	&__item
		width 100%
		height 340px
		padding 25px 35px 0 25px
		clearfix()

	&__item-info
		float left
		width 50%

	&__item-title
		font-size 24px
		color #e5e5e5
		font-weight bold

	&__item-date
		color #2a2a3e
		font-weight bold
		margin-top 10px

	&__item-text
		color #87878b
		margin-top 12px

	&__item-image
		float right
		width 47%
		margin-right 3%
		text-align center

		& img
			max-height 230px
			overflow hidden

		& figcaption
			display block
			text-align right

		& a
			color #018af4


.testimonials
	gs-column(1,2,1%)

	&__title
		padding-bottom 12px
		margin-bottom 15px
		border-width 0
		border-bottom 1px solid #d2d2d2

	&__list
		list-style none

	&__item
		clearfix()

		&:not(:last-child)
			padding-bottom 10px
			margin-bottom 10px
			border-bottom 1px solid #d2d2d2

	&__avatar
		float left
		border 5px solid #fff
		margin-right 10px


	 &__text
		font-style italic
		padding-left 110px

		&:last-child
			font-weight bold
			margin-top 10px


.social
	float right

	&__title
		vertical-align top

	&__list
		list-style none

	&__item
		display inline-block

	&__link
		display block
		width 20px
		height 20px
		margin-right 3px
		background url("../images/soc-sprite.png") 0 0 no-repeat
		font-size 0
		color transparent
		.rotate(15deg)

		&_fb
			background-position 0 0
			&:hover
				background-position 0 -20px


		&_tw
			background-position -20px 0
			&:hover
				background-position -20px -20px


		&_gplus
			background-position -40px 0
			&:hover
				background-position -40px -20px


		&_in
			background-position -60px 0
			&:hover
				background-position -60px -20px


		&_rss
			background-position -80px 0
			&:hover
				background-position -80px -20px


		&_fl
			background-position -100px 0
			&:hover
				background-position -100px -20px


		&_you
			background-position -120px 0
			&:hover
				background-position -120px -20px



@media screen and (max-width:980px)
	.testimonials
		padding-bottom 30px
		gs-column(1,1,1%)


@media screen and (max-width:800px)
	.slider__item-info
		width 100%
		margin-bottom 10px
		text-align center

	.slider__item-text
		display none

	.slider__item-image
		width 100%
		margin-right 0

		& figcaption
			text-align center


@media screen and (max-width:640px)
	.slider__item
		padding-top 10px

	.social
		float none

